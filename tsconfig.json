{
    "compilerOptions": {
        "outDir": "./dist/",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "ES2020",
        "jsx": "react",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "dist",
    ]
}